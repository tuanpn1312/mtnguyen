<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Edit_thongtin_user">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroup_login"
        >

    </ImageView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:text="Thiết lập thông tin"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Tên của bạn"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editName_user"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp" />
        <Button
            android:id="@+id/bttDoiPass"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/backgroup_btt_signin"
            android:gravity="center"
            android:text="Đổi mật khẩu"
            android:textColor="#e03fd8"
            android:textColorHighlight="@color/material_on_primary_emphasis_medium"

            app:backgroundTint="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Email của bạn"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editEmail_user"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Số điện thoại của bạn"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSdt_user"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="phone"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="Địa chỉ của bạn"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editDiachi_user"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="17sp" />

    </LinearLayout>
    <Button
        android:id="@+id/bttQuayLai"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/backgroup_btt_signin"
        android:drawableLeft="@drawable/ic_baseline_chevron_left"
        android:gravity="fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Quay lại "
        android:textColor="#e3242b"
        android:textColorHighlight="@color/material_on_primary_emphasis_medium"
        app:backgroundTint="@null" />
    <Button
        android:id="@+id/bttThayDoi"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/backgroup_btt_signin"
        android:drawableRight="@drawable/ic_baseline_chevron_right"
        android:gravity="fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text=" Thay đổi"
        android:textColor="#008000"
        android:textColorHighlight="@color/material_on_primary_emphasis_medium"
        app:backgroundTint="@null" />

</RelativeLayout>