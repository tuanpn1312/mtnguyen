<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/linearPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Đổi mật khẩu"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editPass_cu"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:hint="Mật khẩu cũ"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/backgroup_black"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17sp" />
        <EditText
            android:id="@+id/editPass_moi"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:hint="Mật khẩu mới"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/backgroup_black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/editRePass_moi"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/backgroup_black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bttQuayLai_Pass"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/linearPass"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"

        android:background="@drawable/backgroup_btt_signin"
        android:drawableLeft="@drawable/ic_baseline_chevron_left"
        android:gravity="fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Quay lại "
        android:textColor="#e3242b"
        android:textColorHighlight="@color/material_on_primary_emphasis_medium"
        app:backgroundTint="?android:attr/textColorHintInverse" />

    <Button
        android:id="@+id/bttThayDoi_Pass"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/linearPass"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/backgroup_btt_signin"
        android:drawableRight="@drawable/ic_baseline_chevron_right"
        android:gravity="fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text=" Thay đổi"
        android:textColor="#008000"
        android:textColorHighlight="@color/material_on_primary_emphasis_medium"
        app:backgroundTint="?android:attr/textColorHintInverse" />
</RelativeLayout>