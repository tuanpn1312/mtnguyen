<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.ThongTinActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backgroup_login"
        >

    </ImageView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Thiết lập thông tin"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editNameBaby"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="20dp"
            android:background="@drawable/custom_input"
            android:hint="Tên của bé"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="17sp" />

        <RadioGroup
            android:id="@+id/radioGroupSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <RadioButton
                android:id="@+id/radioBttMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_male_blue"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:shadowColor="@color/purple_200"
                android:text="Bé trai"
                android:textColor="#ffffff"
                android:textColorHighlight="@color/black"
                android:textColorLink="@color/black" />

            <RadioButton
                android:id="@+id/radioBttFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_female_pink"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="Bé gái"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radioChuaBiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tôi chưa biết"
                android:textColor="@color/white" />
        </RadioGroup>
        <EditText
            android:id="@+id/editTinhtrangsk"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="20dp"
            android:background="@drawable/custom_input"
            android:hint="Tình trạng sức khỏe của thai nhi"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="17sp" />
    </LinearLayout>
    <Button
        android:id="@+id/bttTiepTucTrangThongTin1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/backgroup_btt_signin"
        android:drawableRight="@drawable/ic_baseline_chevron_right"
        android:gravity="fill_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Tiếp tục"
        android:textColor="#e03fd8"
        android:textColorHighlight="@color/material_on_primary_emphasis_medium"

        app:backgroundTint="@null" />

</RelativeLayout>